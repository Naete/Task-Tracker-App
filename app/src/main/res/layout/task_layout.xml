<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circle_button_background"
        android:backgroundTint="#e2e2e2"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/task"
            android:layout_alignBottom="@+id/task"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taskName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_extra_condensed_semibold"
                android:text="Task1"
                android:textColor="@color/Task_Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/taskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_condensed_light"
                android:text="Description1"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taskDate"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_condensed_light"
                android:text="10 Aug 2019"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/taskTime"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_condensed_light"
                android:gravity="start"
                android:text="9am" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:contentDescription="@string/Delete_Icon"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="@color/Task_Name" />

    </LinearLayout>


</RelativeLayout>